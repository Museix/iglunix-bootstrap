# ~/.mkshrc: executed by mksh(1) for interactive shells.

# Set up command history
HISTFILE=~/.mksh_history
HISTSIZE=1000

# Set up aliases
alias ll='ls -l'
alias la='ls -la'
alias l='ls -CF'
alias ..='cd ..'
alias ...='cd ../..'

# Set up prompt
PS1='$ '

# Enable command completion
set -o emacs

# Set up colors for ls
export CLICOLOR=1
export LSCOLORS=ExFxCxDxBxegedabagacad

# Source additional configuration if it exists
if [ -f ~/.mkshrc.local ]; then
    . ~/.mkshrc.local
fi
